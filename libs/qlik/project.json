{
    "name": "qlik",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/qlik/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "clean": true,
                "rootDir": "libs/qlik/src",
                "outputPath": "dist/libs/qlik",
                "main": "libs/qlik/index.ts",
                "tsConfig": "libs/qlik/tsconfig.lib.json",
                "assets": ["libs/qlik/*.md"],
                "updateBuildableProjectDepsInPackageJson": true
            }
        },
        "build-with-js": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "command": "node tools/build-with-js/copy-qlik-js.mjs"
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs qlik {args.ver} {args.tag}",
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["{projectRoot}/**/*.ts", "{projectRoot}/package.json"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/qlik/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
