{
    "name": "components",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/components/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "clean": true,
                "rootDir": "libs/components/src",
                "outputPath": "dist/libs/components",
                "main": "libs/components/index.ts",
                "tsConfig": "libs/components/tsconfig.lib.json",
                "assets": ["libs/components/*.md"],
                "updateBuildableProjectDepsInPackageJson": true
            }
        },
        "build-with-js": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "command": "node tools/build-with-js/copy-components-js.mjs"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["{projectRoot}/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/libs/components"],
            "options": {
                "jestConfig": "libs/components/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
