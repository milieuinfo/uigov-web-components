{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es2022",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "experimentalDecorators": false,
        "useDefineForClassFields": true
    },
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
    "include": [
        "src/**/*.stories.ts",
        "src/**/*.stories.js",
        "src/**/*.stories.jsx",
        "src/**/*.stories.tsx",
        "src/**/*.stories.mdx",
        ".storybook/*.js",
        ".storybook/*.ts"
    ]
}
