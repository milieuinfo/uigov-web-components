{
    "name": "playground-lit",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/playground-lit/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/apps/playground-lit",
                "compiler": "babel",
                "main": "apps/playground-lit/src/main.ts",
                "tsConfig": "apps/playground-lit/tsconfig.app.json",
                "webpackConfig": "apps/playground-lit/webpack.config.js",
                "assets": ["apps/playground-lit/src/favicon.ico", "apps/playground-lit/src/assets"],
                "index": "apps/playground-lit/src/index.html",
                "baseHref": "/",
                "styles": ["apps/playground-lit/src/styles.scss"],
                "scripts": []
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "outputHashing": "all",
                    "sourceMap": false,
                    "namedChunks": false,
                    "extractLicenses": true,
                    "vendorChunk": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/playground-lit/src/environments/environment.ts",
                            "with": "apps/playground-lit/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "@nx/webpack:dev-server",
            "options": {
                "buildTarget": "playground-lit:build",
                "port": 4202
            },
            "configurations": {
                "production": {
                    "buildTarget": "playground-lit:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/playground-lit/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/playground-lit/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    }
}
