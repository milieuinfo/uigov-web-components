{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build/tmp",
        "rootDirs": ["./libs", "./apps", "./resources"],
        "types": ["cypress", "cypress-axe"],
        "paths": {
            "@domg-wc/common-storybook": ["libs/shared/storybook/src/index.ts"],
            "@domg-wc/common": ["libs/common/src/index.ts"],
            "@domg-wc/common/constants": ["libs/common/src/constants/index.ts"],
            "@domg-wc/common/styles/*": ["libs/common/src/styles/*"],
            "@domg-wc/components": ["libs/components/src/index.ts"],
            "@domg-wc/components/next/*": ["libs/components/src/next/*"],
            "@domg-wc/elements": ["libs/elements/src/index.ts"],
            "@domg-wc/fat-lib": ["libs/support/fat-lib/src/index.ts"],
            "@domg-wc/form/*": ["libs/form/src/*"],
            "@domg-wc/integration/*": ["libs/integration/src/*"],
            "@domg-wc/map": ["libs/map/src/index.ts"],
            "@domg-wc/qlik": ["libs/qlik/src/index.ts"],
            "@domg-wc/sections": ["libs/sections/src/index.ts"],
            "@domg-wc/test-support": ["libs/support/test-support/src/index.ts"]
        },
        "target": "es2021",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    }
}
